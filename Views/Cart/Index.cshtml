@model List<PizzaHub.Models.CartItem>

<h2 class="my-4">Your Cart</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Your cart is empty.
    </div>
    <a href="/Menu" class="btn btn-primary">Browse Menu</a>
}
else
{
    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Pizza</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/images/pizzas/@item.Pizza.ImageFileName" width="50" />
                        @item.Pizza.Name
                    </td>
                    <td>₹@item.Pizza.Price.ToString("F2")</td>
                    <td>@item.Quantity</td>
                    <td>₹@((item.Pizza.Price * item.Quantity).ToString("F2"))</td>
                    <td>
                        <form asp-action="Remove" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">Total:</th>
                <th colspan="2">₹@ViewBag.Total.ToString("F2")</th>
            </tr>
        </tfoot>
    </table>

    <div class="text-end">
        <a href="/Menu" class="btn btn-secondary">Continue Shopping</a>
        <a asp-controller="Order" asp-action="Checkout" class="btn btn-success">Proceed to Checkout</a>
    </div>
}