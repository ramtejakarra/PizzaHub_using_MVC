@model List<PizzaHub.Models.Pizza>
@using System.Globalization

@{
    ViewData["Title"] = "Our Menu";
}

<h2 class="text-center my-4">Our Delicious Pizzas</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No pizzas available at the moment.
    </div>
}
else
{
    <div class="row">
        @foreach (var pizza in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <!-- Pizza Image -->
                    <img src="~/images/pizzas/@pizza.ImageFileName"
                         alt="@pizza.Name"
                         class="card-img-top"
                         style="height: 200px; object-fit: cover;" />

                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@pizza.Name</h5>
                        <p class="card-text text-muted">@pizza.Description</p>
                        <h5 class="mt-auto text-success fw-bold">
                            @string.Format(new CultureInfo("en-IN"), "{0:C}", pizza.Price)
                        </h5>

                        <!-- Add to Cart Button -->
                        <form asp-controller="Cart" asp-action="Add" method="post" class="mt-3">
                            <input type="hidden" name="id" value="@pizza.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button type="submit" class="btn btn-success w-100">
                                Add to Cart
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Back to Home -->
<div class="text-center mt-4 mb-5">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">← Back to Home</a>
</div>