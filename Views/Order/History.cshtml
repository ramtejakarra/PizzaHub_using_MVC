@model List<PizzaHub.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<h2 class="my-4">Your Order History</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You have no orders yet.
    </div>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>Order #</th>
            <th>Date</th>
            <th>Total</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        @foreach (var o in Model)
        {
            <tr>
                <td>#@o.Id</td>
                <td>@o.OrderDate.ToString("g")</td>
                <td>₹@o.TotalAmount.ToString("F2")</td>
                <td>Confirmed</td>
                <td>
                    <a asp-action="OrderPlaced" asp-route-id="@o.Id" class="btn btn-sm btn-info">Details</a>
                </td>
            </tr>
        }
    </table>
}

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">← Back to Home</a>
</div>