@model List<PizzaHub.Models.CartItem>

@{
    ViewData["Title"] = "Checkout";
}

<h2 class="my-4">Review Your Order</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Pizza</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Pizza.Name</td>
                <td>₹@item.Pizza.Price.ToString("F2")</td>
                <td>@item.Quantity</td>
                <td>₹@((item.Pizza.Price * item.Quantity).ToString("F2"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-end">Total:</th>
            <th>₹@ViewBag.Total.ToString("F2")</th>
        </tr>
    </tfoot>
</table>

<form asp-action="PlaceOrder" method="post">
    <button type="submit" class="btn btn-success btn-lg">Place Order</button>
    <a asp-controller="Cart" asp-action="Index" class="btn btn-secondary">Back to Cart</a>
</form>